{% extends "base.jinja" %}

{% block page_content %}

<form method="POST" action="/login_action">
<div class="form">
      <div class="title">Welcome</div>
      <div class="subtitle">Log into your account!</div>
      <div class="input-container ic1">
        <input name='email' id="email" class="input" type="text" placeholder=" " />
        <div class="cut"></div>
        <label for="email" class="placeholder">Email</label>
      </div>
      <div class="input-container ic2">
        <input name='password' id="password" class="input" type="text" placeholder=" " />
        <div class="cut"></div>
        <label for="password" class="placeholder">Password</label>
      </div>
      <button type="text" class="submit">LOGIN</button>
      <button type="text" class="submit"><a href="/sign_up">Sign Up</a></button>
    </div>
    </form>

    {% with messages = get_flashed_messages() %}
    {% if messages %}
    {% for message in messages  %}
    <h4>{{message}}</h4>
    {% endfor %}
    {% endif %}
    {% endwith %}

    {% endblock  %}
    
