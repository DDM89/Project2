{% extends "home.jinja" %}

{% block head %}
{{ super() }}
{% endblock  %}



{% block page_content %}
    <form method="POST" action="/create_dish_action">
    <div class="form">
      <div class="title">Create Dish</div>
      <div class="input-container ic1">
        <input name='dish' id="dish" class="input" type="text" placeholder=" " />
        <div class="cut"></div>
        <label for="dish" class="placeholder">Dish</label>
      </div>
      <div class="input-container ic2">
        <input name='allergies' id="allergies" class="input" type="text" placeholder=" " />
        <div class="cut"></div>
        <label for="allergies" class="placeholder">Allergies</label>
      </div>
      <div class="input-container ic2">
        <input name="image" id="image" class="input" type="text" placeholder=" " />
        <div class="cut cut-short"></div>
        <label for="image" class="placeholder">Image</label>
      </div>
      <button type="text" class="submit">Create</button>
    </div>
    </form>

    {% endblock  %}